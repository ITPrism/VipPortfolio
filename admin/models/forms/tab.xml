<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
			name="id" 
			type="text" 
			default="0" 
			label="JGLOBAL_FIELD_ID_LABEL" 
			readonly="true" 
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			filter="int"
			/>

		<field 
		    name="title" 
		    type="text" 
		    class="inputbox"
			size="40" 
			label="JGLOBAL_TITLE"
			description="COM_VIPPORTFOLIO_FACEBOOK_TITLE_DESC" 
			required="true" 
			filter="trim" 
		/>

		<field
	        name="app_id"
	        type="text"
	        label="COM_VIPPORTFOLIO_APP_ID"
	        description="COM_VIPPORTFOLIO_APP_ID_DESC"
	        required="true"  
	        />

        <field 
            name="page_id" 
            type="hidden" 
            default="0" 
        />
            
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1" >
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>
</form>