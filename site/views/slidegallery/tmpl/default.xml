<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_VIPPORTFOLIO_VIEW_SLIDEGALLERY_TITLE">
        <message>
            <![CDATA[COM_VIPPORTFOLIO_VIEW_SLIDEGALLERY_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request"
            addfieldpath="/administrator/components/com_vipportfolio/models/fields"
        >
            <field name="catid" type="vpcategories"
                description="COM_VIPPORTFOLIO_CHOOSE_CATEGORY_DESC"
                label="COM_VIPPORTFOLIO_CHOOSE_CATEGORY_LABEL"
            />
            
        </fieldset>
    </fields>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic">
            <field name="slidegallery_effect" type="list" default="fade"  label="COM_VIPPORTFOLIO_SLIDEGALLERY_EFFECT" description="COM_VIPPORTFOLIO_SLIDEGALLERY_EFFECT_DESC" >
                <option value="none">COM_VIPPORTFOLIO_NONE</option>
                <option value="slide">COM_VIPPORTFOLIO_SLIDE</option>
                <option value="fade">COM_VIPPORTFOLIO_FADE</option>
                <option value="fade-crossfade">COM_VIPPORTFOLIO_FADE_CROSSFADE</option>
            </field>
            <field name="slidegallery_speed" type="text" default="200" size="50" label="COM_VIPPORTFOLIO_SPEED" description="COM_VIPPORTFOLIO_SPEED_DESC" />
            
            <field name="slidegallery_width" type="text" default="600" size="50" label="COM_VIPPORTFOLIO_WIDTH" description="COM_VIPPORTFOLIO_SLIDEGALLERY_WIDTH_DESC" />
            <field name="slidegallery_height" type="text" default="400" size="50" label="COM_VIPPORTFOLIO_HEIGHT" description="COM_VIPPORTFOLIO_SLIDEGALLERY_HEIGHT_DESC" />
        </fieldset>
    </fields>
</metadata>
